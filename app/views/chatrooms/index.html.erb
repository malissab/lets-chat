<p style="color: green"><%= notice %></p> 
<div class="container-fluid">
  <div class="row">
    <div class="col-2">
      <%= render 'form', chatroom: Chatroom.new %>
      <hr>
      <% @chatrooms.each do |chatroom| %>
        <%= link_to chatroom do %>
          <div class="card mb-2">
            <div class="card-body">
              <%= chatroom.name %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class = 'col-9'>
      <% if @chatroom.present? %>
        <div class="chat-room">
          <nav class="navbar navbar-light bg-info mb-2">
            <span class="navbar-brand" href="#"><%= @chatroom.name %></span>
            <ul class='navbar-nav'>
              <li class='nav-item'>Welcome, 
                <%= current_user.username %>
              </li>
            </ul>
          </nav>
          <div id="messages">
            <% @chatroom.messages.each do |message| %>
              <%= render 'messages/message', message: message %>
            <% end %>
          </div>
          <div class = "message-area">
            <%= render 'messages/form', message: Message.new, chatroom: @chatroom %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
